<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.slambook_mundas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/nw"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Slambook_Mundas"
        tools:targetApi="31">
        <activity
            android:name=".AboutUs"
            android:exported="false" />
        <activity
            android:name=".FriendInfo"
            android:exported="false" />
        <activity
            android:name=".MySlamInfo"
            android:exported="false" />
        <activity
            android:name=".FriendSlam"
            android:exported="false" />
        <activity
            android:name=".NewSlam"
            android:exported="false" /> <!-- Onboarding Activity (Launches first) -->
        <activity
            android:name=".Onboarding"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Nickname Activity (Shown after onboarding) -->
        <activity
            android:name=".Nickname"
            android:exported="false" /> <!-- Main (Home) Activity (Shown after Nickname) -->
        <activity
            android:name=".Home"
            android:exported="false" />
    </application>

</manifest>
